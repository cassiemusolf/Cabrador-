          <li><a href="/profile/@Model.GetId()/trips">Past Trips</a></li>
      </ul>
      <nav>
          <div class="nav-wrapper">
              <a href="/profile/index/@Model.GetId()" class="brand-logo">Cabrador</a>
              <ul class="right hide-on-med-and-down">
